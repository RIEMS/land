#!/usr/bin/env bash

BUILDOPTIONS='user_build_options'

finish () {
    rm -f $BUILDOPTIONS
    exit 0
}


# Compiling Options
echo "Please select from following supported options."
echo "   1. Linux PGI seq"
echo "   2. Linux PGI dmpar"
echo "   3. Linux Intel seq"
echo "   4. Linux Intel dmpar"
echo "   5. Linux GCC seq"
echo "   0. exit only"
echo ""
echo -n "Enter selection: "
read option


# Compiling Configurations
case $option in
    1 ) cp arch/user_build_options.pgf90.serial $BUILDOPTIONS ;;
    2 ) cp arch/user_build_options.pgf90.mpi $BUILDOPTIONS ;;
    3 ) cp arch/user_build_options.ifort.serial $BUILDOPTIONS ;;
    4 ) cp arch/user_build_options.ifort.mpi $BUILDOPTIONS ;;
    5 ) cp arch/user_build_options.gfortran.serial $BUILDOPTIONS ;;
    0 ) exit ;;
    * ) echo 'ERROR: Unknown option!' ; exit 1 ;;
esac